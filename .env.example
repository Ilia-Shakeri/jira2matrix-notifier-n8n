# ============================================================
#  jira2matrix-n8n : Environment Configuration Example
#  ------------------------------------------------------------
#  Copy this file to `.env` and fill in your actual values.
#  NEVER commit your real .env file to GitHub.
# ============================================================

# === Jira Configuration =====================================

# Base URL of your Jira instance (no trailing slash)
JIRA_BASE_URL=https://jira.example.com

# (Optional) Jira webhook secret if you use one
# JIRA_WEBHOOK_SECRET=your_webhook_secret


# === Matrix Configuration ===================================

# Base URL of your Matrix homeserver client API
# (usually https://matrix.example.com)
MATRIX_BASE_URL=https://matrix.example.com

# Matrix domain (the part after the colon in user IDs)
MATRIX_DOMAIN=matrix.example.com

# Matrix bot account credentials
MATRIX_BOT_USERNAME=jira-bot
MATRIX_BOT_PASSWORD=changeme123

# Bot MXID (Matrix user ID)
MATRIX_BOT_MXID=@jira-bot:${MATRIX_DOMAIN}

# Optional: if you already have an access token,
# set it here. Otherwise leave blank to let n8n
# perform login automatically.
MATRIX_ACCESS_TOKEN=


# === n8n Data Tables ========================================

# ID of the Data Table used to cache Matrix room IDs
DATATABLE_ROOMS_ID=your_rooms_table_id

# ID of the Data Table used to store Matrix access tokens
DATATABLE_TOKENS_ID=your_tokens_table_id


# === Webhook Configuration ==================================

# Internal webhook identifiers (auto-generated by n8n)
# These can remain placeholders unless you explicitly
# import/export webhooks manually.
WEBHOOK_ID=your-webhook-id
WEBHOOK_PATH=your-webhook-path


# === Misc ===================================================

# Set to "true" for verbose debug logs in n8n HTTP nodes
DEBUG=false
